---
import Layout from "../layouts/Layout.astro";

// Fake user data - replace with real data from auth store
const user = {
  name: "Juan Perez",
  email: "juan.perez@email.com",
  phone: "+54 11 1234-5678",
  document: "DNI 12.345.678",
  address: {
    street: "Av. Corrientes 1234",
    city: "Buenos Aires",
    province: "Ciudad Autonoma de Buenos Aires",
    postalCode: "C1043",
  },
  createdAt: "2023-05-15",
  totalOrders: 12,
  totalSpent: 456000,
};

function formatPrice(price: number): string {
  return new Intl.NumberFormat("es-AR", {
    style: "currency",
    currency: "ARS",
    minimumFractionDigits: 0,
  }).format(price);
}
---

<Layout title="Mi Cuenta - MuebleriaIris">
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Mi Cuenta</h1>
        <p class="text-gray-500 mt-2">Gestiona tu informacion personal y preferencias</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Sidebar Navigation -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="flex items-center gap-4 mb-6 pb-6 border-b border-gray-200">
              <div class="w-16 h-16 bg-primary-100 text-primary-600 rounded-full flex items-center justify-center font-bold text-xl">
                {user.name.split(" ").map(n => n[0]).join("")}
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">{user.name}</h3>
                <p class="text-sm text-gray-500">{user.email}</p>
              </div>
            </div>

            <nav class="space-y-1">
              <a
                href="/mi-cuenta"
                class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-primary-600 bg-primary-50 rounded-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Informacion Personal
              </a>
              <a
                href="/mis-pedidos"
                class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-gray-600 hover:bg-gray-50 rounded-lg transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
                Mis Pedidos
              </a>
              <a
                href="/favoritos"
                class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-gray-600 hover:bg-gray-50 rounded-lg transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
                Favoritos
              </a>
              <a
                href="#"
                class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-red-600 hover:bg-red-50 rounded-lg transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Cerrar Sesion
              </a>
            </nav>
          </div>

          <!-- Stats Card -->
          <div class="bg-white rounded-xl shadow-sm p-6 mt-6">
            <h3 class="font-semibold text-gray-900 mb-4">Estadisticas</h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Total Pedidos</span>
                <span class="text-sm font-bold text-gray-900">{user.totalOrders}</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Total Gastado</span>
                <span class="text-sm font-bold text-gray-900">{formatPrice(user.totalSpent)}</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Cliente desde</span>
                <span class="text-sm font-bold text-gray-900">{new Date(user.createdAt).toLocaleDateString("es-AR", { year: "numeric", month: "short" })}</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Personal Information -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-xl font-bold text-gray-900">Informacion Personal</h2>
              <button class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-primary-600 hover:bg-primary-50 rounded-lg transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Editar
              </button>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Nombre Completo</label>
                <p class="text-gray-900">{user.name}</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Documento</label>
                <p class="text-gray-900">{user.document}</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <p class="text-gray-900">{user.email}</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Telefono</label>
                <p class="text-gray-900">{user.phone}</p>
              </div>
            </div>
          </div>

          <!-- Address Information -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-xl font-bold text-gray-900">Direccion de Envio</h2>
              <button class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-primary-600 hover:bg-primary-50 rounded-lg transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Editar
              </button>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Direccion</label>
                <p class="text-gray-900">{user.address.street}</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Ciudad</label>
                <p class="text-gray-900">{user.address.city}</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Provincia</label>
                <p class="text-gray-900">{user.address.province}</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Codigo Postal</label>
                <p class="text-gray-900">{user.address.postalCode}</p>
              </div>
            </div>
          </div>

          <!-- Security -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-6">Seguridad</h2>
            
            <div class="space-y-4">
              <div class="flex items-center justify-between py-4 border-b border-gray-200">
                <div>
                  <h3 class="font-medium text-gray-900">Contrase√±a</h3>
                  <p class="text-sm text-gray-500">Ultima modificacion: hace 3 meses</p>
                </div>
                <button class="px-4 py-2 text-sm font-medium text-primary-600 hover:bg-primary-50 rounded-lg transition-colors">
                  Cambiar
                </button>
              </div>

              <div class="flex items-center justify-between py-4 border-b border-gray-200">
                <div>
                  <h3 class="font-medium text-gray-900">Autenticacion en Dos Pasos</h3>
                  <p class="text-sm text-gray-500">Agrega una capa adicional de seguridad</p>
                </div>
                <button class="px-4 py-2 text-sm font-medium text-gray-600 hover:bg-gray-50 rounded-lg transition-colors">
                  Activar
                </button>
              </div>

              <div class="flex items-center justify-between py-4">
                <div>
                  <h3 class="font-medium text-gray-900">Sesiones Activas</h3>
                  <p class="text-sm text-gray-500">Gestiona tus dispositivos conectados</p>
                </div>
                <button class="px-4 py-2 text-sm font-medium text-gray-600 hover:bg-gray-50 rounded-lg transition-colors">
                  Ver
                </button>
              </div>
            </div>
          </div>

          <!-- Danger Zone -->
          <div class="bg-white rounded-xl shadow-sm p-6 border-2 border-red-200">
            <h2 class="text-xl font-bold text-red-600 mb-4">Zona de Peligro</h2>
            <p class="text-sm text-gray-600 mb-4">
              Una vez que elimines tu cuenta, no hay vuelta atras. Por favor, esta seguro.
            </p>
            <button class="px-4 py-2 text-sm font-medium text-red-600 hover:bg-red-50 border border-red-300 rounded-lg transition-colors">
              Eliminar mi cuenta
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
