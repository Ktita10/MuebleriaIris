---
import Layout from "../layouts/Layout.astro";
import RegisterForm from "../components/auth/RegisterForm";
---

<Layout
  title="Crear Cuenta"
  description="Registrate en Muebleria Iris para acceder a beneficios exclusivos y seguir tus pedidos."
>
  <div class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4">
    <div class="max-w-md w-full">
      <!-- Logo -->
      <div class="text-center mb-8">
        <a href="/" class="inline-flex items-center gap-2">
          <div class="w-12 h-12 bg-primary-600 rounded-xl flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <span class="text-2xl font-bold text-gray-900">Muebleria Iris</span>
        </a>
      </div>

      <!-- Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold text-gray-900">Crea tu cuenta</h1>
          <p class="text-gray-600 mt-2">Registrate para obtener beneficios exclusivos</p>
        </div>

        <RegisterForm client:load />
      </div>

      <!-- Back to home -->
      <div class="text-center mt-6">
        <a href="/" class="text-sm text-gray-500">
          ‚Üê Volver al inicio
        </a>
      </div>
    </div>
  </div>
</Layout>
