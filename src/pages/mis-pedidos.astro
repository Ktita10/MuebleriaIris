---
import Layout from "../layouts/Layout.astro";
import ClientOrders from "../components/client/ClientOrders";
---

<Layout title="Mis Pedidos - MuebleriaIris">
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex items-center gap-3 mb-2">
          <a href="/mi-cuenta" class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </a>
          <h1 class="text-3xl font-bold text-gray-900">Mis Pedidos</h1>
        </div>
        <p class="text-gray-500">Historial completo de tus compras</p>
      </div>

      <!-- Client Orders Component -->
      <ClientOrders client:load />
    </div>
  </div>
</Layout>
