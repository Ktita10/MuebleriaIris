---
/**
 * Features Section - Iris Muebles
 * 
 * Muestra las ventajas de comprar con nosotros
 * Estilo: Limpio, iconos naranja, cards con hover elegante
 */
const features = [
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />`,
    title: "Materiales Premium",
    description:
      "Maderas seleccionadas y materiales de primera calidad para garantizar durabilidad.",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
    title: "Entrega Rapida",
    description:
      "Envios a todo el pais en 3-7 dias habiles. Instalacion incluida.",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
    title: "Garantia 2 Anios",
    description:
      "Garantia extendida en todos nuestros productos. Tu tranquilidad es nuestra prioridad.",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />`,
    title: "12 Cuotas Sin Interes",
    description:
      "Paga con todas las tarjetas. Tambien aceptamos efectivo y transferencias.",
  },
];
---

<section class="py-20 bg-white">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <span class="inline-block px-4 py-1.5 bg-orange-100 text-orange-600 text-sm font-medium rounded-full mb-4">
        Nuestras Ventajas
      </span>
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Por que elegirnos
      </h2>
      <p class="text-gray-600 text-lg">
        Mas de 10 anios creando espacios unicos para miles de hogares
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {
        features.map((feature, index) => (
          <div class="p-8 bg-gray-50 rounded-2xl border border-gray-100">
            <!-- Icon -->
            <div class="w-14 h-14 mb-6 bg-orange-100 text-orange-600 rounded-xl flex items-center justify-center">
              <svg
                class="w-7 h-7"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                set:html={feature.icon}
              />
            </div>
            
            <!-- Content -->
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-gray-600 leading-relaxed text-sm">
              {feature.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
